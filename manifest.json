{
  "manifest_version": 3,
  "name": "YouTube Foco",
  "version": "1.1.0",
  "description": "Reduz distrações no YouTube com modo foco e soneca.",
  "icons": {
    "16": "assets/icons/16x16.png",
    "32": "assets/icons/32x32.png",
    "48": "assets/icons/48x48.png",
    "128": "assets/icons/128x128.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "src/background/service_worker.js"
  },
  "action": {
    "default_title": "YouTube Foco",
    "default_icon": {
      "16": "assets/icons/16x16.png",
      "32": "assets/icons/32x32.png",
      "48": "assets/icons/48x48.png",
      "128": "assets/icons/128x128.png"
    },
    "default_popup": "src/ui/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "src/shared/constants.js",
        "src/content/content_script.js"
      ],
      "run_at": "document_idle"
    }
  ]
}